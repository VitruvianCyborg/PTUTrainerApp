<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#A0A0A0">

    <TextView
        android:id="@+id/Dialog_Training_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/orator_std"
        android:text="Training"
        android:textSize="24dp"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/Agi_Training"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:checked="false"
        android:fontFamily="@font/orator_std"
        android:switchTextAppearance="@style/Toolbar.TitleText"
        android:theme="@style/CustomSwitch"
        android:text="Agility "
        android:textColor="#000000"
        app:layout_constraintEnd_toStartOf="@+id/Brutal_Training"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Dialog_Training_Title" />

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/Brutal_Training"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/orator_std"
        android:text="Brutal "
        android:theme="@style/CustomSwitch"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/Agi_Training"
        app:layout_constraintTop_toBottomOf="@+id/Dialog_Training_Title" />

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/Foc_Training"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/orator_std"
        android:text="Focused "
        android:textColor="#000000"
        android:theme="@style/CustomSwitch"
        app:layout_constraintEnd_toStartOf="@+id/Insp_Training"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Agi_Training" />

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/Insp_Training"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:textColor="#000000"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/orator_std"
        android:theme="@style/CustomSwitch"
        android:text="Inspired "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/Foc_Training"
        app:layout_constraintTop_toBottomOf="@+id/Agi_Training" />

    <TextView
        android:id="@+id/Dialog_Orders_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/orator_std"
        android:text="Orders"
        android:textColor="#000000"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Foc_Training" />

    <Button
        android:id="@+id/Button_Agility"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Agility"
        android:fontFamily="@font/orator_std"
        app:layout_constraintEnd_toStartOf="@+id/Button_Brutal"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Dialog_Orders_Title" />

    <Button
        android:id="@+id/Button_Brutal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Brutal"
        android:fontFamily="@font/orator_std"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/Button_Agility"
        app:layout_constraintTop_toBottomOf="@+id/Dialog_Orders_Title" />

    <Button
        android:id="@+id/Button_Focused"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Focused"
        android:fontFamily="@font/orator_std"
        app:layout_constraintEnd_toStartOf="@+id/Button_Inspired"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Button_Agility" />

    <Button
        android:id="@+id/Button_Inspired"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Inspired"
        android:fontFamily="@font/orator_std"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/Button_Focused"
        app:layout_constraintTop_toBottomOf="@+id/Button_Agility" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Button_Training_Done"
        android:text="Done"
        android:textSize="30dp"
        android:fontFamily="@font/orator_std"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Button_Focused" />
</android.support.constraint.ConstraintLayout>